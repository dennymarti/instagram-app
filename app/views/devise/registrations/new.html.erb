<div class="container">
  <div class="wrapper d-flex align-items-center justify-content-center">
    <!-- carousel -->
    <%= render 'shared/dummy-phone' %>

    <!-- form -->
    <div>
      <div class="box">
        <div class="sprite heading"></div>
        <h2 class="info intro">Sign up to see photos and videos from your friends.</h2>

        <button class="button d-flex align-items-center justify-content-center">
          <span class="sprite facebook-icon light"></span>
          <span>Log in with Facebook</span>
        </button>

        <div class="separator d-flex align-items-center justify-content-between">
          <div class="line"></div>
          <p class="or">OR</p>
          <div class="line"></div>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "form"}) do |form| %>
          <div class="field">
            <%= form.text_field :email, autocomplete: false, class: "input", placeholder: "Mobile Number or Email" %>
          </div>

          <div class="field">
            <%= form.text_field :name, autocomplete: false, class: "input", placeholder: "Full Name" %>
          </div>

          <div class="field">
            <%= form.password_field :password, autocomplete: false, class: "input", placeholder: "Password" %>
          </div>

          <div class="field">
            <%= form.password_field :password, autocomplete: false, class: "input", placeholder: "Confirm password" %>
          </div>

          <%= form.submit "Sign up", class: "button" %>
        <% end %>

        <p class="info tip">
          By signing up, you agree to our <a href="#">Terms</a>.
          Learn how we collect, use and share your data in our <a href="#">Data Policy</a>
          and how we use cookies and similar technology in our <a href="#">Cookies Policy</a>.
        </p>
      </div>

      <div class="box login text-center">
        <% if controller_name != 'sessions' %>
          <p>Have an account? <%= link_to "Log in", new_session_path(resource_name), class: "link" %></p>
        <% end %>
      </div>

      <div class="apps text-center">
        <p>Get the app.</p>
        <div class="store-icons">
          <a class="sprite store apple" href="#"></a>
          <a class="sprite store google" href="#"></a>
        </div>
      </div>

    </div>
  </div>

  <!-- alerts -->
  <div>
    <%= render 'shared/devisemes' %>
  </div>
</div>