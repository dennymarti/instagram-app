<div class="container">
  <div class="wrapper d-flex align-items-center justify-content-center">
    <!-- carousel -->
    <%= render 'shared/dummy-phone' %>

    <!-- form -->
    <div>
      <div class="box">
        <div class="sprite heading"></div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => "form"}) do |form| %>
          <div class="field">
            <%= form.text_field :email, autofocus: false, class: "input", placeholder: "Phone number, username, or email" %>
          </div>

          <div class="field">
            <%= form.password_field :password, autofocus: false, class: "input", placeholder: "Password" %>
          </div>

          <%= form.submit "Log In", class: "button" %>
        <% end %>

        <div class="separator d-flex align-items-center justify-content-between flex-md-row">
          <div class="line"></div>
          <p class="or">OR</p>
          <div class="line"></div>
        </div>

        <div class="d-flex align-items-center justify-content-center">
          <button class="facebook-button d-flex align-items-center">
            <span class="sprite facebook-icon normal"></span>
            <span>Log in with Facebook</span>
          </button>
        </div>

        <div class="forgot text-center">
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot password?", new_password_path(resource_name) %>
          <% end %>
        </div>
      </div>

      <div class="box signup text-center">
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "link" %></p>
        <% end %>
      </div>

      <div class="apps text-center">
        <p>Get the app.</p>
        <div class="store-icons">
          <a class="sprite store apple" href="#"></a>
          <a class="sprite store google" href="#"></a>
        </div>
      </div>
    </div>
  </div>
</div>