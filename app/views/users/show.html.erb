<%= render "shared/header" %>

<div class="container">
  <div class="profile-wrapper">
    <header class="profile-header d-flex">
      <div class="profile-image col-md-4 text-center">
        <%= image_tag avatar_url(@user), class: "avatar-image big" %>
      </div>

      <div class="profile-info col-md-8">
        <div class="row align-items-center">
          <% if @user.email == "" %>
            <h2 class="username">User</h2>
          <% else %>
            <h2 class="username"><%= @user.email %></h2>
          <% end %>

          <% if @user == current_user %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "edit-profile-link" %>
            <button type="button" class="setting" data-toggle="modal" data-target="#exampleModal">
              <svg class="svg">
                <circle cx="12" cy="12" fill="none" r="8.635" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></circle>
                <path d="M14.232 3.656a1.269 1.269 0 01-.796-.66L12.93 2h-1.86l-.505.996a1.269 1.269 0 01-.796.66m-.001 16.688a1.269 1.269 0 01.796.66l.505.996h1.862l.505-.996a1.269 1.269 0 01.796-.66M3.656 9.768a1.269 1.269 0 01-.66.796L2 11.07v1.862l.996.505a1.269 1.269 0 01.66.796m16.688-.001a1.269 1.269 0 01.66-.796L22 12.93v-1.86l-.996-.505a1.269 1.269 0 01-.66-.796M7.678 4.522a1.269 1.269 0 01-1.03.096l-1.06-.348L4.27 5.587l.348 1.062a1.269 1.269 0 01-.096 1.03m11.8 11.799a1.269 1.269 0 011.03-.096l1.06.348 1.318-1.317-.348-1.062a1.269 1.269 0 01.096-1.03m-14.956.001a1.269 1.269 0 01.096 1.03l-.348 1.06 1.317 1.318 1.062-.348a1.269 1.269 0 011.03.096m11.799-11.8a1.269 1.269 0 01-.096-1.03l.348-1.06-1.317-1.318-1.062.348a1.269 1.269 0 01-1.03-.096" fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="2"></path>
              </svg>
            </button>

            <div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="list-group text-center">
                    <a class="list-group-item list-group-item-action" href="#">Change Password</a>
                    <a class="list-group-item list-group-item-action" href="#">QR Code</a>
                    <a class="list-group-item list-group-item-action" href="#">Apps and Websites</a>
                    <a class="list-group-item list-group-item-action" href="#">Notifications</a>
                    <a class="list-group-item list-group-item-action" href="#">Privacy and Security</a>
                    <a class="list-group-item list-group-item-action" href="#">Login Activity</a>
                    <a class="list-group-item list-group-item-action" href="#">Emails from Instagram</a>
                    <a class="list-group-item list-group-item-action" href="#">Report a Problem</a>
                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "list-group-item list-group-item-action" %>
                    <a class="list-group-item list-group-item-action" href="#" data-dismiss="modal">Cancel</a>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="row align-items-center">
          <p class="profile-data font-weight-light"><strong>0</strong> post</p>
          <p class="profile-data font-weight-light"><strong>0</strong> followers</p>
          <p class="profile-data font-weight-light"><strong>0</strong> following</p>
        </div>

        <div class="row flex-column">
          <% if @user.name %>
            <span class="name"><%= @user.name %></span>
          <% end %>

          <% if @user.bio %>
            <p class="bio"><%= @user.bio %></p>
          <% end %>
        </div>
      </div>
    </header>

    <div class="profile-separator">
      <a href="#">
        <div class="profile-category">
          <svg viewBox="0 0 24 24">
            <rect fill="none" height="18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" width="18" x="3" y="3"></rect>
            <line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="9.015" x2="9.015" y1="3" y2="21"></line>
            <line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="14.985" x2="14.985" y1="3" y2="21"></line>
            <line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="21" x2="3" y1="9.015" y2="9.015"></line>
            <line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="21" x2="3" y1="14.985" y2="14.985"></line>
          </svg>
          <span>Posts</span>
        </div>
      </a>

      <a href="#">
        <div class="profile-category">
          <svg viewBox="0 0 24 24">
            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.6 0 12 0zm0 22.5C6.2 22.5 1.5 17.8 1.5 12S6.2 1.5 12 1.5 22.5 6.2 22.5 12 17.8 22.5 12 22.5zm5-11.8l-6.8-3.9c-.5-.3-1-.3-1.5 0-.4.3-.7.7-.7 1.3v7.8c0 .5.3 1 .8 1.3.2.1.5.2.8.2s.5-.1.8-.2l6.8-3.9c.5-.3.8-.8.8-1.3s-.5-1-1-1.3zm-7.5 5.2V8.1l6.8 3.9-6.8 3.9z"></path>
          </svg>
          <span>Videos</span>
        </div>
      </a>

      <a href="#">
        <div class="profile-category">
          <svg viewBox="0 0 24 24">
            <polygon fill="none" points="20 21 12 13.44 4 21 4 3 20 3 20 21" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></polygon>
          </svg>
          <span>Saved</span>
        </div>
      </a>

      <a href="#">
        <div class="profile-category">
          <svg viewBox="0 0 24 24">
            <path d="M10.201 3.797L12 1.997l1.799 1.8a1.59 1.59 0 001.124.465h5.259A1.818 1.818 0 0122 6.08v14.104a1.818 1.818 0 01-1.818 1.818H3.818A1.818 1.818 0 012 20.184V6.08a1.818 1.818 0 011.818-1.818h5.26a1.59 1.59 0 001.123-.465z" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path>
            <path d="M18.598 22.002V21.4a3.949 3.949 0 00-3.948-3.949H9.495A3.949 3.949 0 005.546 21.4v.603" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path>
            <circle cx="12.072" cy="11.075" fill="none" r="3.556" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></circle>
          </svg>
          <span>Tagged</span>
        </div>
      </a>
    </div>

    <main class="profile-content">
      <% if @posts.any? %>
        <div class="posts">
          <% @posts.each do |post| %>
            <div class="post">
              <%= link_to post_path(post) do %>
                <% photo = post.photos[0] %>
                <%= image_tag photo.image.url(:standard), class: "post-image" %>
                <% if post.photos.count > 1 %>
                  <div class="post-swipe">
                    <svg viewBox="0 0 48 48">
                      <path d="M34.8 29.7V11c0-2.9-2.3-5.2-5.2-5.2H11c-2.9 0-5.2 2.3-5.2 5.2v18.7c0 2.9 2.3 5.2 5.2 5.2h18.7c2.8-.1 5.1-2.4 5.1-5.2zM39.2 15v16.1c0 4.5-3.7 8.2-8.2 8.2H14.9c-.6 0-.9.7-.5 1.1 1 1.1 2.4 1.8 4.1 1.8h13.4c5.7 0 10.3-4.6 10.3-10.3V18.5c0-1.6-.7-3.1-1.8-4.1-.5-.4-1.2 0-1.2.6z"></path>
                    </svg>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="profile-cover">
          <%= image_tag "cover.png", class: "cover-image" %>
          <div class="profile-app">
            <h2>Start capturing and sharing your moments.</h2>
            <h3>Get the app to share your first photo or video.</h3>
            <div class="store-icons">
              <a class="sprite store apple" href="#"></a>
              <a class="sprite store google" href="#"></a>
            </div>
          </div>
        </div>
      <% end %>
    </main>
  </div>
</div>